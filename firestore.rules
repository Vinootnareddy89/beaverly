rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Generic rule for collections where users can only access their own documents.
    function userIsAuthenticated(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own documents in these collections.
    match /tasks/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }

    match /bills/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }
    
    match /habits/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }

    match /events/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }
    
    match /reminders/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }

    match /shopping-list/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }

    match /memos/{docId} {
      allow read, create, update, delete: if userIsAuthenticated(request.resource.data.userId);
    }
  }
}